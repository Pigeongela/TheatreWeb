@model TheatreWeb.Models.Actors

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.FullName)</h1>

<div>
    <h4>Актеры</h4>
    <hr />
    <img src="@Url.Action("GetImage", "Actors", new { id = Model.Id })" alt="Actors Photo" style="width: 20%; height: 20%;">

    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Biography)
        </dd>
        @if (User.IsInRole("Employee") == true)
        {

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>
        }
    </dl>
</div>
<div>
    @if (User.IsInRole("Employee") == true)
    {

    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать |</a>}
    <a asp - action = "Index" > Назад </a>
</div>
<style>
dl {
color: rgba(255, 255, 255, 0.7);
}

h1 {
color: rgba(255, 255, 255, 0.7);
}

h4 {
color: rgba(255, 255, 255, 0.7)
}
</style>
